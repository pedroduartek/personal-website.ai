{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "cd apps/web && pnpm preview",
      "startServerReadyPattern": "Local:.*http://localhost:4173",
      "url": [
        "http://localhost:4173",
        "http://localhost:4173/about",
        "http://localhost:4173/experience",
        "http://localhost:4173/projects",
        "http://localhost:4173/education",
        "http://localhost:4173/skills",
        "http://localhost:4173/contact"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
